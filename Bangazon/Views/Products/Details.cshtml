@using Microsoft.AspNetCore.Identity

@model Bangazon.Models.Product

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductType.Label)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="AddToOrder">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Add To Order" class="btn btn-primary" />
    </form>
    <div>    @TempData["SuccessMessage"] </div>

    @if (UserManager.GetUserId(User) == Model.UserId)
    {
        <div>
        <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a>
            </div>
    }
<div><a href='javascript:history.go(-1)'>Go Back</a></div>
</div>
