@model Bangazon.Models.ReportViewModels.AbandonedProductTypesReportViewModel

@{
    ViewData["Title"] = "AbandonedProductTypes";
}

<h1>Abandoned Product Types</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IncompleteOrderCounts[0].ProductType.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncompleteOrderCounts[0].IncompleteOrderCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.IncompleteOrderCounts)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType.Label)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IncompleteOrderCount)
                </td>
            </tr>
        }
    </tbody>
</table>